{{#if weighIns}}
  <div class="table-responsive">
      <table class="table table-striped table-hover">
          <thead>
          <tr>
              <th>#</th>
              <th>{{t 'date'}}</th>
              <th>{{t 'weight'}}</th>
              <th>{{t 'actions'}}</th>
          </tr>
          </thead>
          <tbody>
          {{#each weighIns}}
            <tr>
                <td class="index">{{plusOne @index}}</td>
                <td class="date">{{@key}}</td>
                <td class="weight">{{this}}</td>
                <td class="actions">
                    <button class="btn btn-primary edit" type="submit">{{t 'edit'}}</button>
                    <button class="btn btn-danger delete">{{t 'delete'}}</button>
                </td>
            </tr>
          {{/each}}
          </tbody>
      </table>
  </div>
{{else}}
  {{> no-data}}
{{/if}}
